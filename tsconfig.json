{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true, 

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": ["node_modules"],
}
