{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",

    /* Interop Constraints */
    "esModuleInterop": true,
    
    /* Type Checking */
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": ["node_modules"],
}
